#!/bin/bash

# –°–∫—Ä–∏–ø—Ç –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–π —É—Å—Ç–∞–Ω–æ–≤–∫–∏ –∏ —Ä–∞–∑–≤–µ—Ä—Ç—ã–≤–∞–Ω–∏—è Telegram-–±–æ—Ç–∞ —Å Docker.

echo "üîπ –û–±–Ω–æ–≤–ª—è–µ–º –ø–∞–∫–µ—Ç—ã –∏ —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º Docker..."
sudo apt update && sudo apt upgrade -y
sudo apt install -y docker.io docker-compose git

echo "üîπ –í–∫–ª—é—á–∞–µ–º –∞–≤—Ç–æ–∑–∞–ø—É—Å–∫ Docker –∏ –∑–∞–ø—É—Å–∫–∞–µ–º –µ–≥–æ..."
sudo systemctl enable --now docker

echo "üîπ –°–æ–∑–¥–∞—ë–º —Ä–∞–±–æ—á—É—é –ø–∞–ø–∫—É –¥–ª—è –±–æ—Ç–∞..."
mkdir -p ~/telegram_bot && cd ~/telegram_bot

echo "üîπ –ö–ª–æ–Ω–∏—Ä—É–µ–º —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π —Å –±–æ—Ç–æ–º..."
git clone git@github.com:aizetta/ObsidianKeeperBot.git .  # –ó–∞–º–µ–Ω–∏—Ç–µ –Ω–∞ —Å–≤–æ–π —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π

echo "üîπ –ö–ª–æ–Ω–∏—Ä—É–µ–º —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π —Å –±–æ—Ç–æ–º..."
git clone git@github.com:aizetta/ObsidianKeeperBot.git Obsidian # –ó–∞–º–µ–Ω–∏—Ç–µ –Ω–∞ —Å–≤–æ–π —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π –æ–±—Å–∏–¥–∏–∞–Ω

echo "üîπ –°–æ–∑–¥–∞—ë–º .env —Ñ–∞–π–ª –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏..."
cat <<EOF > .env
BOT_TOKEN=—Ç–≤–æ–π_—Ç–æ–∫–µ–Ω
REPO_PATH=/data/Obsidian
EOF

echo "üîπ –°–æ–∑–¥–∞—ë–º Dockerfile..."
cat <<EOF > Dockerfile
# –ò—Å–ø–æ–ª—å–∑—É–µ–º –æ—Ñ–∏—Ü–∏–∞–ª—å–Ω—ã–π –æ–±—Ä–∞–∑ Python —Å –æ–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω—ã–º —Ä–∞–∑–º–µ—Ä–æ–º
FROM python:3.12-slim

# –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ä–∞–±–æ—á—É—é –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–µ
WORKDIR /app

# –ö–æ–ø–∏—Ä—É–µ–º —Ñ–∞–π–ª —Å –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç—è–º–∏
COPY requirements.txt .

# –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º Python-–±–∏–±–ª–∏–æ—Ç–µ–∫–∏
RUN pip install --no-cache-dir -r requirements.txt

# –ö–æ–ø–∏—Ä—É–µ–º –≤–µ—Å—å –∫–æ–¥ –±–æ—Ç–∞ –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä
COPY . .

# –ó–∞–ø—É—Å–∫–∞–µ–º –±–æ—Ç–∞ –ø—Ä–∏ —Å—Ç–∞—Ä—Ç–µ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
CMD ["python", "bot.py"]
EOF

echo "üîπ –°–æ–∑–¥–∞—ë–º docker-compose.yml..."
cat <<EOF > docker-compose.yml
version: '3.8'  # –í–µ—Ä—Å–∏—è docker-compose

services:
  telegram_bot:  # –ò–º—è –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
    container_name: telegram_bot  # –£–Ω–∏–∫–∞–ª—å–Ω–æ–µ –∏–º—è –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
    restart: unless-stopped  # –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–π –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫ –ø—Ä–∏ –ø–∞–¥–µ–Ω–∏–∏
    build: .  # –°–±–æ—Ä–∫–∞ –æ–±—Ä–∞–∑–∞ –∏–∑ —Ç–µ–∫—É—â–µ–π –ø–∞–ø–∫–∏
    env_file:
      - .env  # –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö –æ–∫—Ä—É–∂–µ–Ω–∏—è
    volumes:
      - ./data:/data  # –ü—Ä–∏–≤—è–∑—ã–≤–∞–µ–º –ª–æ–∫–∞–ª—å–Ω—É—é –ø–∞–ø–∫—É –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö
EOF

echo "üîπ –°–æ–∑–¥–∞—ë–º —Ñ–∞–π–ª –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π (requirements.txt)..."
cat <<EOF > requirements.txt
python-telegram-bot[async]==20.4
GitPython
asyncio
EOF

echo "üîπ –°–±–æ—Ä–∫–∞ –∏ –∑–∞–ø—É—Å–∫ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞..."
docker-compose up -d --build

echo "‚úÖ –ì–æ—Ç–æ–≤–æ! –ë–æ—Ç –∑–∞–ø—É—â–µ–Ω üöÄ"
